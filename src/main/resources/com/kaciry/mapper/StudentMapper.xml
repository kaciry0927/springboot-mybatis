<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaciry.mapper.StudentMapper">
    <resultMap type="com.kaciry.entity.Student" id="StudentMap">
        <result property="id" column="sno" jdbcType="VARCHAR"/>
        <result property="name" column="sname" jdbcType="VARCHAR"/>
        <result property="age" column="sage" jdbcType="VARCHAR"/>
        <result property="sex" column="ssex" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" parameterType="com.kaciry.entity.Student" resultMap="StudentMap">
        select
          sno, sname, sage,ssex
        from STUDENT
        where sno = #{id}
    </select>

</mapper>